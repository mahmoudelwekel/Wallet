@model Wallet.UI.Models.TransactionModels.CreateTransactionReqModel 

@{
    ViewData["Title"] ="Create Tranaction";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            @Html.AntiForgeryToken()
            <div class="form-group mb-3">
                <label asp-for="TransactionAmount" class="control-label"></label>
                <input asp-for="TransactionAmount" class="form-control" type="number" />
                <span asp-validation-for="TransactionAmount" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="TransactionToUserPhone" class="control-label"></label>
                <input asp-for="TransactionToUserPhone" class="form-control" />
                <span asp-validation-for="TransactionToUserPhone" class="text-danger"></span>
            </div>

            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <input type="submit" value="Create" class="btn btn-primary me-2" />
                @*<a asp-action="Index" class="btn btn-secondary">@Edrak.Enums.Labels.Cancel </a>*@
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
